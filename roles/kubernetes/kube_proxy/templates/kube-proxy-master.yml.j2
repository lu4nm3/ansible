apiVersion: v1
kind: Pod
metadata:
  name: kube-proxy
spec:
  containers:
  - name: kube-proxy
    image: gcr.io/google_containers/hyperkube:v{{ version }}
    command:
    - /hyperkube
    - proxy
    - --master={{ master }}
    securityContext:
      privileged: {{ privileged }}
    volumeMounts:
    - mountPath: /etc/ssl/certs
      name: ssl-certs-host
      readOnly: true
  hostNetwork: true
  volumes:
  - hostPath:
      path: /usr/share/ca-certificates
    name: ssl-certs-host