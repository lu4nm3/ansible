[Unit]
After=etcd2.service
Description=flannel
Wants=etcd2.service

[Service]
ExecStartPre=/usr/bin/wget -N -P /home/core https://github.com/coreos/flannel/releases/download/v0.5.2/flannel-0.5.2-linux-amd64.tar.gz
ExecStartPre=/usr/bin/tar zxvf /home/core/flannel-0.5.2-linux-amd64.tar.gz -C /home/core
ExecStartPre=/usr/bin/mkdir -p /opt/bin
ExecStartPre=/usr/bin/cp /home/core/flannel-0.5.2/flanneld /opt/bin
ExecStartPre=/usr/bin/rm -r /home/core/flannel-0.5.2-linux-amd64.tar.gz /home/core/flannel-0.5.2
ExecStartPre=/usr/bin/etcdctl set /coreos.com/network/config '{"Network": "10.0.0.0/16", "Backend": {"Type": "vxlan"}}'
ExecStart=/opt/bin/flanneld -iface={{ private_ip }}
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
